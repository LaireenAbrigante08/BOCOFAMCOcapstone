}

.modal-header h1 {
    font-size: 28px;
    color: #1d3557;
    margin: 0;
}

.modal-header h2 {
    font-size: 22px;
    color: #457b9d;
    margin: 10px 0;
}

.close-btn {
    background: none;
    border: none;
    font-size: 28px;
    cursor: pointer;
    color: #333;
    position: absolute;
    top: 20px;
    right: 20px;
}

.close-btn:hover {
    color: #ff4d4d;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    font-weight: 500;
    margin-bottom: 8px;
    color: #1d3557;
}

.form-group input,
.form-group textarea,
.form-group select {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 14px;
    color: #333;
    background-color: #f9f9f9;
