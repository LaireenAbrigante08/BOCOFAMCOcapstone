<%- include('../partials/membersidebar') %>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
    }
    .main-content {
        padding: 20px;
    }
    .card {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }
    .card h1, .card h2 {
        color: #333333;
        margin-bottom: 15px;
    }
    .card p {
        color: #666666;
    }
    .stats-container {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }
    .stat-card {
        background: #007bff;
        color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        flex: 1;
        text-align: center;
    }
    .stat-card h3 {
        margin: 0;
        font-size: 18px;
    }
    .stat-card p {
        margin: 5px 0 0;
        font-size: 24px;
        font-weight: bold;
    }
    .recent-activity {
        margin-top: 30px;
    }
    .recent-activity h3 {
        color: #333333;
        margin-bottom: 15px;
    }
    .activity-list {
        list-style: none;
        padding: 0;
    }
    .activity-list li {
        background: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .activity-list li span {
        color: #666666;
        font-size: 14px;
    }
</style>

<div class="main-content">
    <div class="card" id="dashboard">
        <h1>Welcome, <%= user.username %>!</h1>
        <p>CB Number: <%= user.cb_number %></p>

        <!-- Loans Section -->
        <div class="stats-container">
            <div class="stat-card">
                <h3>Total Loans</h3>
                <p><%= user.loans.length %></p>
            </div>
            <div class="stat-card">
                <h3>Active Rentals</h3>
                <p><%= user.rentals.filter(r => r.status === 'Active').length %></p>
            </div>
        </div>

        <!-- Recent Activity Section -->
        <div class="recent-activity">
            <h3>Recent Loans</h3>
            <ul class="activity-list">
                <% user.loans.forEach(loan => { %>
                    <li>
                        <span>Loan ID: <%= loan.id %> - Amount: â‚±<%= loan.amount %></span>
                        <span>Status: <%= loan.status %></span>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
</div>


<script>
    function showSection(sectionId) {
        document.querySelectorAll('.card').forEach(section => {
            section.style.display = 'none';
        });
        document.getElementById(sectionId).style.display = 'block';
    }

    function toggleDropdown(dropdownId) {
        let dropdown = document.getElementById(dropdownId);
        dropdown.style.display = dropdown.style.display === 'flex' ? 'none' : 'flex';
    }
</script>
</body>
</html>