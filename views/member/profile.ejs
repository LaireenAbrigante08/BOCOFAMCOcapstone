<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Member Profile Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f5f7fa;
            color: #333;
            padding: 20px;
        }
        .profile-form {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .profile-form h2 {
            margin-bottom: 20px;
            text-align: center;
        }
        .profile-form label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
        }
        .profile-form input,
        .profile-form select,
        .profile-form textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .profile-form button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #1d3557;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }
        .profile-form button:hover {
            background-color: #457b9d;
        }
    </style>
</head>
<body>
    <div class="profile-form">
        <h2>Member Profile Form</h2>
        <form action="/save-profile" method="POST">
            <!-- Personal Information -->
            <label for="cb_number">CB Number:</label>
            <input type="text" id="cb_number" name="cb_number" required>

            <label for="nickname">Nickname:</label>
            <input type="text" id="nickname" name="nickname">

            <label for="contact_number">Contact Number:</label>
            <input type="text" id="contact_number" name="contact_number">

            <label for="civil_status">Civil Status:</label>
            <input type="text" id="civil_status" name="civil_status">

            <label for="sex">Sex:</label>
            <select id="sex" name="sex">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>

            <label for="age">Age:</label>
            <input type="number" id="age" name="age">

            <label for="dob">Date of Birth:</label>
            <input type="date" id="dob" name="dob">

            <label for="place_of_birth">Place of Birth:</label>
            <input type="text" id="place_of_birth" name="place_of_birth">

            <label for="nationality">Nationality:</label>
            <input type="text" id="nationality" name="nationality">

            <label for="religion">Religion:</label>
            <input type="text" id="religion" name="religion">

            <!-- Spouse Information -->
            <label for="spouse_name">Spouse Name:</label>
            <input type="text" id="spouse_name" name="spouse_name">

            <label for="spouse_age">Spouse Age:</label>
            <input type="number" id="spouse_age" name="spouse_age">

            <label for="spouse_occupation">Spouse Occupation:</label>
            <input type="text" id="spouse_occupation" name="spouse_occupation">

            <!-- Parents Information -->
            <label for="father_name">Father's Name:</label>
            <input type="text" id="father_name" name="father_name">

            <label for="mother_name">Mother's Name:</label>
            <input type="text" id="mother_name" name="mother_name">

            <label for="parent_address">Parents' Address:</label>
            <textarea id="parent_address" name="parent_address"></textarea>

            <!-- Children Information -->
            <label for="number_of_children">Number of Children:</label>
            <input type="number" id="number_of_children" name="number_of_children">

            <label for="children_info">Children Info (Names and Ages):</label>
            <textarea id="children_info" name="children_info"></textarea>

            <!-- Educational and Occupational Information -->
            <label for="educational_attainment">Educational Attainment:</label>
            <input type="text" id="educational_attainment" name="educational_attainment">

            <label for="occupation">Occupation:</label>
            <input type="text" id="occupation" name="occupation">

            <label for="other_income">Other Source of Income:</label>
            <input type="text" id="other_income" name="other_income">

            <label for="annual_income">Annual Income:</label>
            <input type="number" id="annual_income" name="annual_income" step="0.01">

            <!-- Educational Background -->
            <label for="elementary_school">Elementary School:</label>
            <input type="text" id="elementary_school" name="elementary_school">

            <label for="elementary_address">Elementary School Address:</label>
            <input type="text" id="elementary_address" name="elementary_address">

            <label for="elementary_year_graduated">Elementary Year Graduated:</label>
            <input type="text" id="elementary_year_graduated" name="elementary_year_graduated">

            <label for="secondary_school">Secondary School:</label>
            <input type="text" id="secondary_school" name="secondary_school">

            <label for="secondary_address">Secondary School Address:</label>
            <input type="text" id="secondary_address" name="secondary_address">

            <label for="secondary_year_graduated">Secondary Year Graduated:</label>
            <input type="text" id="secondary_year_graduated" name="secondary_year_graduated">

            <label for="college_school">College School:</label>
            <input type="text" id="college_school" name="college_school">

            <label for="college_address">College School Address:</label>
            <input type="text" id="college_address" name="college_address">

            <label for="college_year_graduated">College Year Graduated:</label>
            <input type="text" id="college_year_graduated" name="college_year_graduated">

            <label for="vocational_school">Vocational School:</label>
            <input type="text" id="vocational_school" name="vocational_school">

            <label for="vocational_address">Vocational School Address:</label>
            <input type="text" id="vocational_address" name="vocational_address">

            <label for="vocational_year_graduated">Vocational Year Graduated:</label>
            <input type="text" id="vocational_year_graduated" name="vocational_year_graduated">

            <!-- Cooperative Information -->
            <label for="membership_date">Membership Date:</label>
            <input type="date" id="membership_date" name="membership_date">

            <label for="cooperative_position">Position in Cooperative:</label>
            <input type="text" id="cooperative_position" name="cooperative_position">

            <!-- Emergency Contact -->
            <label for="emergency_contact_name">Emergency Contact Name:</label>
            <input type="text" id="emergency_contact_name" name="emergency_contact_name">

            <label for="emergency_contact_address">Emergency Contact Address:</label>
            <textarea id="emergency_contact_address" name="emergency_contact_address"></textarea>

            <label for="relation">Relation:</label>
            <input type="text" id="relation" name="relation">

            <!-- Agrarian and Farm Information -->
            <label for="agrarian_beneficiary">Agrarian Reform Beneficiary:</label>
            <select id="agrarian_beneficiary" name="agrarian_beneficiary">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>

            <label for="farm_area">Farm Area (in hectares):</label>
            <input type="number" id="farm_area" name="farm_area" step="0.01">

            <label for="farm_type">Farm Type:</label>
            <select id="farm_type" name="farm_type">
                <option value="Irrigated">Irrigated</option>
                <option value="Rainfed">Rainfed</option>
            </select>

            <label for="is_tenant">Are you a Tenant?</label>
            <select id="is_tenant" name="is_tenant">
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>

            <!-- Recruited By -->
            <label for="recruited_by">Recruited By:</label>
            <input type="text" id="recruited_by" name="recruited_by">

            <!-- Signature and Date -->
            <label for="signature">Signature:</label>
            <input type="text" id="signature" name="signature">

            <label for="signed_date">Signed Date:</label>
            <input type="date" id="signed_date" name="signed_date">

            <!-- Submit Button -->
            <button type="submit">Save Profile</button>
        </form>
    </div>
</body>
</html>