<%- include('../partials/membersidebar') %>

<style>
    body {
        font-family: 'Poppins', sans-serif; /* Mas modern na font */
        background-color: #f0f2f5; /* Mas light na background */
        margin: 0;
        padding: 0;
    }
    .form-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1); /* Mas malambot na shadow */
    }
    .form-container h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #333333; /* Darker text for better readability */
        font-size: 24px;
        font-weight: 600;
    }
    .error-message {
        color: #ff4d4d; /* Vibrant red for errors */
        text-align: center;
        margin-bottom: 15px;
        font-size: 14px;
    }
    .success-message {
        color: #28a745; /* Green for success */
        text-align: center;
        margin-bottom: 15px;
        font-size: 14px;
    }
    .form-control {
        border-radius: 8px;
        border: 1px solid #dddddd;
        padding: 10px 15px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }
    .form-control:focus {
        border-color: #007bff; /* Blue border on focus */
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }
    .btn-primary {
        background-color: #007bff; /* Blue button */
        border: none;
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 16px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }
    .btn-link {
        color: #007bff; /* Blue link */
        text-decoration: none;
        font-size: 14px;
        transition: color 0.3s ease;
    }
    .btn-link:hover {
        color: #0056b3; /* Darker blue on hover */
    }
    .text-center {
        text-align: center;
    }
    .mt-3 {
        margin-top: 15px;
    }
</style>

<div class="form-container">
    <h2>Change Password</h2>

    <% if (error) { %>
        <p class="error-message"><%= error %></p>
    <% } %>

    <% if (success) { %>
        <p class="success-message"><%= success %></p>
    <% } %>

    <form action="/member/change-password" method="POST">
        <div class="mb-3">
            <label for="currentPassword" class="form-label">Current Password:</label>
            <input type="password" id="currentPassword" name="currentPassword" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password:</label>
            <input type="password" id="newPassword" name="newPassword" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm New Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">Update Password</button>
    </form>

    <div class="text-center mt-3">
        <a href="/member/dashboard" class="btn btn-link">Back to Dashboard</a>
    </div>
</div>
