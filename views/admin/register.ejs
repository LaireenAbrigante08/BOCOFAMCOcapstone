<%- include('../partials/adminsidebar') %>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }
        .form-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .error-message {
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>BOCOFAMCO ID Form</h2>

        <% if (error) { %>
            <p class="error-message"><%= error %></p>
        <% } %>

        <form action="/admin/register" method="POST">
            <div class="mb-3">
                <label for="cb_number" class="form-label">CB Number:</label>
                <input type="text" id="cb_number" name="cb_number" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="first_name" class="form-label">First Name:</label>
                <input type="text" id="first_name" name="first_name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="middle_name" class="form-label">Middle Name:</label>
                <input type="text" id="middle_name" name="middle_name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="last_name" class="form-label">Last Name:</label>
                <input type="text" id="last_name" name="last_name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="address" class="form-label">Address:</label>
                <textarea id="address" name="address" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <label for="dob" class="form-label">Date of Birth:</label>
                <input type="date" id="dob" name="dob" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-control">
            </div>

            <div class="mb-3">
                <label for="gender" class="form-label">Gender:</label>
                <select id="gender" name="gender" class="form-select">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="contact_number" class="form-label">Contact Number:</label>
                <input type="text" id="contact_number" name="contact_number" class="form-control" pattern="[0-9]{10,}" title="Enter a valid 10-digit number">
            </div>

            <div class="mb-3">
                <label for="role" class="form-label">Role:</label>
                <select id="role" name="role" class="form-select" required>
                    <option value="member">Member</option>
                    <option value="admin">Admin</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Beneficiaries:</label>
                <input type="text" name="beneficiaries[]" class="form-control mb-2" placeholder="Beneficiary 1">
                <input type="text" name="beneficiaries[]" class="form-control" placeholder="Beneficiary 2">
            </div>

            <h3 class="mt-4">Emergency Contact</h3>

            <div class="mb-3">
                <label for="emergency_name" class="form-label">Name:</label>
                <input type="text" id="emergency_name" name="emergency_name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="emergency_relationship" class="form-label">Relationship:</label>
                <input type="text" id="emergency_relationship" name="emergency_relationship" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="emergency_address" class="form-label">Address:</label>
                <textarea id="emergency_address" name="emergency_address" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="emergency_contact" class="form-label">Contact Number:</label>
                <input type="text" id="emergency_contact" name="emergency_contact" class="form-control" pattern="[0-9]{10,}" title="Enter a valid 10-digit number" required>
            </div>

            <div class="mb-3">
                <label for="date_issued" class="form-label">Date Issued:</label>
                <input type="date" id="date_issued" name="date_issued" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <!-- New Fields -->
            <div class="mb-3">
                <label for="nickname" class="form-label">Nickname:</label>
                <input type="text" id="nickname" name="nickname" class="form-control">
            </div>

            <div class="mb-3">
                <label for="civil_status" class="form-label">Civil Status:</label>
                <input type="text" id="civil_status" name="civil_status" class="form-control">
            </div>

            <div class="mb-3">
                <label for="age" class="form-label">Age:</label>
                <input type="number" id="age" name="age" class="form-control">
            </div>

            <div class="mb-3">
                <label for="place_of_birth" class="form-label">Place of Birth:</label>
                <input type="text" id="place_of_birth" name="place_of_birth" class="form-control">
            </div>

            <div class="mb-3">
                <label for="nationality" class="form-label">Nationality:</label>
                <input type="text" id="nationality" name="nationality" class="form-control">
            </div>

            <div class="mb-3">
                <label for="religion" class="form-label">Religion:</label>
                <input type="text" id="religion" name="religion" class="form-control">
            </div>

            <div class="mb-3">
                <label for="spouse_name" class="form-label">Spouse Name:</label>
                <input type="text" id="spouse_name" name="spouse_name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="spouse_age" class="form-label">Spouse Age:</label>
                <input type="number" id="spouse_age" name="spouse_age" class="form-control">
            </div>

            <div class="mb-3">
                <label for="spouse_occupation" class="form-label">Spouse Occupation:</label>
                <input type="text" id="spouse_occupation" name="spouse_occupation" class="form-control">
            </div>

            <div class="mb-3">
                <label for="father_name" class="form-label">Father's Name:</label>
                <input type="text" id="father_name" name="father_name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="mother_name" class="form-label">Mother's Name:</label>
                <input type="text" id="mother_name" name="mother_name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="parent_address" class="form-label">Parent's Address:</label>
                <textarea id="parent_address" name="parent_address" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="number_of_children" class="form-label">Number of Children:</label>
                <input type="number" id="number_of_children" name="number_of_children" class="form-control">
            </div>

            <div class="mb-3">
                <label for="children_info" class="form-label">Children Info:</label>
                <textarea id="children_info" name="children_info" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="educational_attainment" class="form-label">Educational Attainment:</label>
                <input type="text" id="educational_attainment" name="educational_attainment" class="form-control">
            </div>

            <div class="mb-3">
                <label for="occupation" class="form-label">Occupation:</label>
                <input type="text" id="occupation" name="occupation" class="form-control">
            </div>

            <div class="mb-3">
                <label for="other_income" class="form-label">Other Income:</label>
                <input type="text" id="other_income" name="other_income" class="form-control">
            </div>

            <div class="mb-3">
                <label for="annual_income" class="form-label">Annual Income:</label>
                <input type="number" id="annual_income" name="annual_income" class="form-control">
            </div>

            <div class="mb-3">
                <label for="elementary_school" class="form-label">Elementary School:</label>
                <input type="text" id="elementary_school" name="elementary_school" class="form-control">
            </div>

            <div class="mb-3">
                <label for="elementary_address" class="form-label">Elementary School Address:</label>
                <input type="text" id="elementary_address" name="elementary_address" class="form-control">
            </div>

            <div class="mb-3">
                <label for="elementary_year_graduated" class="form-label">Elementary Year Graduated:</label>
                <input type="text" id="elementary_year_graduated" name="elementary_year_graduated" class="form-control">
            </div>

            <div class="mb-3">
                <label for="secondary_school" class="form-label">Secondary School:</label>
                <input type="text" id="secondary_school" name="secondary_school" class="form-control">
            </div>

            <div class="mb-3">
                <label for="secondary_address" class="form-label">Secondary School Address:</label>
                <input type="text" id="secondary_address" name="secondary_address" class="form-control">
            </div>

            <div class="mb-3">
                <label for="secondary_year_graduated" class="form-label">Secondary Year Graduated:</label>
                <input type="text" id="secondary_year_graduated" name="secondary_year_graduated" class="form-control">
            </div>

            <div class="mb-3">
                <label for="college_school" class="form-label">College School:</label>
                <input type="text" id="college_school" name="college_school" class="form-control">
            </div>

            <div class="mb-3">
                <label for="college_address" class="form-label">College School Address:</label>
                <input type="text" id="college_address" name="college_address" class="form-control">
            </div>

            <div class="mb-3">
                <label for="college_year_graduated" class="form-label">College Year Graduated:</label>
                <input type="text" id="college_year_graduated" name="college_year_graduated" class="form-control">
            </div>

            <div class="mb-3">
                <label for="vocational_school" class="form-label">Vocational School:</label>
                <input type="text" id="vocational_school" name="vocational_school" class="form-control">
            </div>

            <div class="mb-3">
                <label for="vocational_address" class="form-label">Vocational School Address:</label>
                <input type="text" id="vocational_address" name="vocational_address" class="form-control">
            </div>

            <div class="mb-3">
                <label for="vocational_year_graduated" class="form-label">Vocational Year Graduated:</label>
                <input type="text" id="vocational_year_graduated" name="vocational_year_graduated" class="form-control">
            </div>

            <div class="mb-3">
                <label for="membership_date" class="form-label">Membership Date:</label>
                <input type="date" id="membership_date" name="membership_date" class="form-control">
            </div>

            <div class="mb-3">
                <label for="cooperative_position" class="form-label">Cooperative Position:</label>
                <input type="text" id="cooperative_position" name="cooperative_position" class="form-control">
            </div>

            <div class="mb-3">
                <label for="emergency_contact_name" class="form-label">Emergency Contact Name:</label>
                <input type="text" id="emergency_contact_name" name="emergency_contact_name" class="form-control">
            </div>

            <div class="mb-3">
                <label for="emergency_contact_address" class="form-label">Emergency Contact Address:</label>
                <textarea id="emergency_contact_address" name="emergency_contact_address" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="relation" class="form-label">Relation:</label>
                <input type="text" id="relation" name="relation" class="form-control">
            </div>

            <div class="mb-3">
                <label for="agrarian_beneficiary" class="form-label">Agrarian Beneficiary:</label>
                <select id="agrarian_beneficiary" name="agrarian_beneficiary" class="form-select">
                    <option value="">-- Select --</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="farm_area" class="form-label">Farm Area:</label>
                <input type="number" id="farm_area" name="farm_area" class="form-control">
            </div>

            <div class="mb-3">
                <label for="farm_type" class="form-label">Farm Type:</label>
                <select id="farm_type" name="farm_type" class="form-select">
                    <option value="">-- Select --</option>
                    <option value="Irrigated">Irrigated</option>
                    <option value="Rainfed">Rainfed</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="is_tenant" class="form-label">Is Tenant:</label>
                <select id="is_tenant" name="is_tenant" class="form-select">
                    <option value="">-- Select --</option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="recruited_by" class="form-label">Recruited By:</label>
                <input type="text" id="recruited_by" name="recruited_by" class="form-control">
            </div>

            <div class="mb-3">
                <label for="signature" class="form-label">Signature:</label>
                <input type="text" id="signature" name="signature" class="form-control">
            </div>

            <div class="mb-3">
                <label for="signed_date" class="form-label">Signed Date:</label>
                <input type="date" id="signed_date" name="signed_date" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
    </div>

</body>
</html>